- content_for(:left_menu) do
  - content_for(:left_menu_classes) { 'booking' }
  - content_for(:body_classes) { 'booking' }
  h1.text-center bookanook
  form#left_menu.booking
    div#location-filter.btn-group-sm
      div 1. #{t('nooks.filters.libraries')}
      div#add-location-button.btn
        = link_to 'select_locations', class: 'btn btn-primary remote-modal', data: { modal: '#modal', callback: 'locationsModalLoaded' } do
          = t('nooks.filters.library.add')
          span#add-location-sign +
        end
    div
      div 2. #{t('nooks.filters.when')}
      div#when.btn-group.btn-group-sm
        button#today.btn value="today" type="button" #{t('nooks.filters.times.today')}
        button#this-week.btn.active value="this-week" type="button" #{t('nooks.filters.times.this-week')}
        button#future.btn value="future" type="button" #{t('nooks.filters.times.future')}
    div
      div 3. #{t('nooks.filters.days')}
      div#days.datepicker-element data-date="#{Time.now.to_date.strftime('%m/%d/%Y')}"
      = hidden_field_tag "day"
    div
      div 4. #{t('nooks.filters.range')}
      <input id="hour-range-slider" type="text" class="span2" value="" data-slider-min="8" data-slider-max="17" data-slider-step="0.5" data-slider-value="[10.0,14.0]"/>
      div.clearfix
        div.slider-min 10:00AM
        div.slider-max 2:00PM
    div
      div 5. #{t('nooks.filters.choose_amenities')}
      - Nook.all.collect(&:amenities).flatten.uniq.each do |amenity|
        div
          = check_box_tag('amenities[]', amenity, false, id: "amenity_#{amenity}")
          = label_tag("amenity_#{amenity}", amenity.titleize) 
    div#filtered-results
      div Filtered Results
      div.dropdown
        a#matching-rooms-dropdown.dropdown-toggle data-toggle="dropdown" href="#"
          | #{t('nooks.filters.matching_rooms')} (#{Nook.count})
          span.caret
        ul.dropdown-menu aria-labelledby="matching-rooms-dropdown"
          - Nook.all.each do |nook|
            li
              = check_box_tag nook.id
              = label_tag nook.id, nook.name
      div.dropdown
        a#matching-types-dropdown.dropdown-toggle data-toggle="dropdown" href="#"
          | #{t('nooks.filters.matching_types')} (#{Nook.distinct.pluck(:type).count})
          span.caret
        ul.dropdown-menu aria-labelledby="matching-types-dropdown"
          - Nook.distinct.pluck(:type).each do |key|
            li
              = check_box_tag key
              = label_tag key, key.titleize.pluralize
