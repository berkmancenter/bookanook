@import "my_vars.less";

body {
  padding: 2%;
  background-image: url(<%= asset_path('tiled-background.svg') %>);
  background-color: @gray-background;
  overflow-y: scroll;

  div.empty-separator {
    height: 10px;
    width: 100%;
    clear: both;
  }

  h1,h2,h3,h4,h5,h6 {
    margin: 0px;
    padding-top: 20px;
    padding-bottom: 10px;
  }

  label { font-weight: normal; }

  .panel { overflow: hidden; }

  hr.better-hr {
    margin: 15px -20px;
    border: 0;
    border-top: 1px solid #dddddd;
    clear: both;
  }

  * {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  .btn:focus,
  .btn:active:focus,
  .btn.active:focus,
  .btn.focus,
  .btn:active.focus,
  .btn.active.focus {
    outline: 0;
    border: none;
  }

  .site-title {
    color: #ec137c;

    &:hover,
    &:focus { text-decoration: none; }
  }

  input[type=checkbox] {
    margin: 0 0.5em 0 1.4em;
  }
}

label.hash {
  display: block;
}

input.hash {
  width: 30%;
  display: inline-block;
}

.container .left-menu, .container-fluid .left-menu {
  > *:first-child:last-child {
    min-height: 800px;
  }

  &:not(.booking) {
    background: white;
  }

  .dropdown {
    position: initial;

    a {
      text-decoration: none;
    }

    ul.dropdown-menu {
      position: initial;
      border: none;
      -webkit-box-shadow: none;
      box-shadow: none;
      background-clip: initial;
    }
  }

  .btn:hover { color: #7b7979; }
}

form.edit_nook {
  .inline {
    > * {
      display: inline-block;
    }

    input {
      width: 60px;
      padding-left: @padding-small-horizontal;
      padding-right: @padding-small-horizontal;
    }
  }
}

span.checked, span.unchecked {
  padding: 2px;
  font-size: @font-size-small;
  color: white;

  + span {
    margin-left: @padding-small-horizontal;
  }
}

span.checked {
  background-color: @brand-primary;
}

span.unchecked {
  background-color: @gray-lightish;

  + span {
    color: @gray-lightish;
  }

  &:before {
    visibility: hidden;
  }
}

.wrapper {
  background: white;
  padding: 10px 20px;
}

#toolbar {
  margin-bottom: 1em;
}
