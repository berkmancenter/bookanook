@import "my_vars.less";

body {
  &.booking {
    .container-fluid {
      > * {
        &.main-menu {
          .nooks {
            padding: 0;
          }

          .book-this-nook {
            &:hover, &:focus {
              text-decoration: none;
            }
          }

          .nook {
            background-color: #fafafa;
            margin: 0 0 10px 0;
            padding: 10px;

            &:hover {
              box-shadow: 0px 0px 10px gray;
            }

            img {
              width: 100%;
              margin-bottom: 10px;
            }

            .nook-property {
              margin-top: 5px;

              &.availability.available-now {
                color: #4099d0;

                .nook-icon {
                  &.availability { background-image: url(<%= asset_path('nook_availability_blue.gif') %>) }
                }
              }
            }
          }

          .nook-icon {
            display: inline-block;
            width: 20px;
            height: 20px;
            background-position: center center;
            background-repeat: no-repeat;
            vertical-align: middle;
            margin-right: 5px;

            &.name { background-image: url(<%= asset_path('nook_name.gif') %>) }
            &.location { background-image: url(<%= asset_path('nook_location.gif') %>) }
            &.availability { background-image: url(<%= asset_path('nook_availability.gif') %>) }
            &.amenities { background-image: url(<%= asset_path('nook_amenities.gif') %>) }
            &.maxcapacity { background-image: url(<%= asset_path('nook_maxcapacity.gif') %>) }
          }

          .nook-item {
            padding-right: 10px;
            padding-left: 0px;
          }

          @media (max-width: 768px) {
            .nook-item { width: 100%; }
          }

          @media (max-width: 1000px) and (min-width: 768px)  {
            .nook-item { width: 50%; }
          }

          @media (min-width: 1000px) {
            .nook-item { width: 33.333333333%; }
          }

          @media (min-width: 1200px) {
            .nook-item { width: 25%; }
          }

          @media (min-width: 1400px) {
            .nook-item { width: 20%; }
          }

          @media (min-width: 1700px) {
            .nook-item { width: 16.666666667%; }
          }
        }
      }
    }
  }
}
