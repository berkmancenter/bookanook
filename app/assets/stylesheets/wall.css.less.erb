@import "my_vars.less";

body {

  .event {
      padding-left: 0;
      padding-right: 0;
      border: 1px solid;
      margin-top: -1px;
      vertical-align: middle;
      white-space: nowrap;
      background: white;
  }

  .event b {
      font-weight: normal;
      color: rgba(255, 255, 255, .5);
  }

  .event .time {
      display: inline-block;
      overflow: hidden;
      height: 0;
      border: 4px solid #000;
      border-radius: 4px;
      opacity: .5;
      position: relative;
  }

  .event:hover .time {
      opacity: .9;
  }
  .timeline .col-sm-1 {
      padding-left: 0px;
  }
  .timeline span.small {
      padding-left: 0px;
      padding-right: 1px;
  }
  .timeline span.small::before {
      content: " ";
      position: absolute;
      bottom: -3px;
      left: 0px;
      border-left: 1px solid #C1C1C1;
      height: 5px;
  }
  .day {
    padding-top: 5px;
    border-collapse: collapse;
    margin-top: -1px;
    overflow: hidden;
  }
  .book {
    margin-top: 10px;
    border-collapse: collapse;
    margin-bottom: 10px;
    overflow: hidden;
  }
  .day-time {
    float: left;
    opacity: 0.4;
    margin-left: 10px;
  }
  .nook-1 {
    border: 4px solid #FF4136 !important;
  }

  .nook-2 {
    border: 4px solid #85144b !important;
  }

  .nook-3 {
    border: 4px solid #0074D9 !important;
  }

  .nook-4 {
    border: 4px solid #2ECC40 !important;
  }

  .nook-5 {
    border: 4px solid #FFDC00 !important;
  }

  .nook-6 {
    border: 4px solid #F012BE !important;
  }

  .selected .nook{
    border: 2px solid @brand-primary;
  }

  &.booking {
    .container-fluid {
      > * {
        &.main-menu {
          .nooks {
            padding: 0;
          }

          .book-this-nook {
            &:hover, &:focus {
              text-decoration: none;
            }
          }

          .nook {
            background-color: #fafafa;
            margin: 0 0 10px 0;
            padding: 10px;

            &:hover {
              box-shadow: 0px 0px 10px gray;
            }

            img {
              width: 100%;
              margin-bottom: 10px;
            }

            .nook-property {
              margin-top: 5px;

              &.availability.available-now {
                color: #4099d0;

                .nook-icon {
                  &.availability { background-image: url(<%= asset_path('nook_availability_blue.gif') %>) }
                }
              }
            }
          }

          .nook-icon {
            display: inline-block;
            width: 20px;
            height: 20px;
            background-position: center center;
            background-repeat: no-repeat;
            vertical-align: middle;
            margin-right: 5px;

            &.name { background-image: url(<%= asset_path('nook_name.gif') %>) }
            &.location { background-image: url(<%= asset_path('nook_location.gif') %>) }
            &.availability { background-image: url(<%= asset_path('nook_availability.gif') %>) }
            &.amenities { background-image: url(<%= asset_path('nook_amenities.gif') %>) }
            &.maxcapacity { background-image: url(<%= asset_path('nook_maxcapacity.gif') %>) }
          }

          .nook-item {
            padding-right: 10px;
            padding-left: 0px;
          }

          @media (max-width: 768px) {
            .nook-item { width: 100%; }
          }

          @media (max-width: 1000px) and (min-width: 768px)  {
            .nook-item { width: 50%; }
          }

          @media (min-width: 1000px) {
            .nook-item { width: 33.333333333%; }
          }

          @media (min-width: 1200px) {
            .nook-item { width: 25%; }
          }

          @media (min-width: 1400px) {
            .nook-item { width: 20%; }
          }

          @media (min-width: 1700px) {
            .nook-item { width: 16.666666667%; }
          }

          .nook-item-expanded {
            background-color: #fafafa;
            margin: 0 0 10px 0;
            padding: 10px;

            .schedule-wrapper {
              overflow: hidden;
            }

            .timeline-wrapper {
              margin-left: 0px;
              margin-right: 0px;
              margin-bottom: 10px;

              .timeline {
                padding-left: 0px;
                padding-right: 0px;

                .col-sm-1 {
                  padding-left: 0px;
                }

                span.small {
                  font-size: 10px;
                  line-height: 18px;
                  padding-left: 0px;
                  padding-right: 1px;

                  &:before {
                    content: " ";
                    position: absolute;
                    bottom: -3px;
                    left: 0px;
                    border-left: 1px solid #C1C1C1;
                    height: 5px;
                  }
                }
              }
            }
          }

          .nook-expanded {
            img {
              width: 100%;
              margin-bottom: 10px;
            }
          }

          .nook-weekly-schedule {
            padding-left: 10px;
            padding-right: 10px;

            .time-slot {
              button {
                &:hover:before {
                  position: absolute;
                  left: 0;
                  top: -500px;
                  content: "";
                  width: 1px;
                  height: 1000px;
                  background: #ec137c;
                  z-index: 100;
                }
              }
            }
          }

          .book-this-expanded-nook {
            .btn {
              background-color: @brand-primary;
              color: white;
            }
          }
        }
      }
    }
  }
}
