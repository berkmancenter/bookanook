@import "my_vars.less";

body {
  &.booking {
    .container-fluid {
      > * {
        &.main-menu {
          .nav-pills {
            &.navbar-left {
              padding: 0;

              li { margin-right: 10px; }
            }

            &.navbar-right {
              .row {
                margin: 0;
              }

              li { cursor: pointer; }
            }

            li > a {
              box-shadow: none;
            }
          }

          #user-pill {
            width: 240px;

            span.caret,
            span.glyphicon-menu-hamburger { color: #7b7979; }
          }

          .nooks {
            padding: 0;
          }

          .nook {
            background-color: #fafafa;
            margin: 10px 0 0px 0;
            padding: 10px;

            img {
              width: 100%;
              margin-bottom: 10px;
            }

            .nook-property {
              margin-top: 5px;

              &.availability.available-now {
                color: #4099d0;

                .nook-icon {
                  &.availability { background-image: url(<%= asset_path('nook_availability_blue.gif') %>) }
                }
              }
            }

            .book-this-nook {
              width: 100%;
              background-color: #ffffff;
              color: #4099d0;
              border: 1px solid #4099d0;
              margin-top: 10px;

              &:hover {
                background-color: #4099d0;
                border: 0;
                color: #ffffff;
              }
            }
          }

          .nook-icon {
            display: inline-block;
            width: 20px;
            height: 20px;
            background-position: center center;
            background-repeat: no-repeat;
            vertical-align: middle;
            margin-right: 5px;

            &.name { background-image: url(<%= asset_path('nook_name.gif') %>) }
            &.location { background-image: url(<%= asset_path('nook_location.gif') %>) }
            &.availability { background-image: url(<%= asset_path('nook_availability.gif') %>) }
            &.amenities { background-image: url(<%= asset_path('nook_amenities.gif') %>) }
            &.maxcapacity { background-image: url(<%= asset_path('nook_maxcapacity.gif') %>) }
          }

          .nook-item {
            padding-right: 0;
            padding-left: 10px;
          }

          @media (max-width: 768px) {
            .nook-item { width: 100%; }
          }

          @media (max-width: 1000px) and (min-width: 768px)  {
            .nook-item { width: 50%; }
          }

          @media (min-width: 1000px) {
            .nook-item { width: 33.333333333%; }
          }

          @media (min-width: 1200px) {
            .nook-item { width: 25%; }
          }

          @media (min-width: 1400px) {
            .nook-item { width: 20%; }
          }

          @media (min-width: 1700px) {
            .nook-item { width: 16.666666667%; }
          }
        }
      }
    }
  }
}