#modal {
  .modal-dialog.row { width: 100%; }

  .modal-content {
    background: transparent;
    box-shadow: none;
    border: none;
    padding: 0;
  }

  .select-locations-modal {
    button { margin-right: 10px; }
  }

  .panel-title {
    padding: 0;
    font-size: 14px;

    .nook-title { font-weight: normal; }
  }

  .amenity input[type=checkbox] + label { opacity: 0.5; }
  .amenity input[type=checkbox]:checked + label { opacity: 1; }
}