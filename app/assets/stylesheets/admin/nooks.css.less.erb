  .edit_nook {
    .carousel {
      img { width: 100% };
    }

    .file-upload {
      position: relative;
      overflow: hidden;
      margin: 10px;
      background-color: #ffffff;
      color: #0198CB;
      border: 1px solid #0198CB;
      margin-left: 0;

      &:hover,
      &:active,
      &:focus,
      &:active:focus,
      &:active:hover {
        background-color: #ffffff;
        color: #0198CB;
        border: 1px solid #0198CB;
      }

      input.upload {
        position: absolute;
        top: 0;
        right: 0;
        margin: 0;
        padding: 0;
        font-size: 20px;
        cursor: pointer;
        opacity: 0;
        filter: alpha(opacity=0);
      }
    }
  }
