@import "my_vars.less";

body {
  padding: 2%;

  &.booking {
    background-image: url(<%= asset_path('tiled-background.svg') %>);
    background-color: @gray-background;

    h1,h2,h3,h4,h5,h6 {
      margin: 0px;
      padding-top: 20px;
      padding-bottom: 10px;
    }

    .container-fluid {
      padding: 0;

      > * {
        padding: 0;

        &.left-menu {
          > h1 { background: @gray-lightest; }

          form > * {
            padding: 10px;
            border-top: 2px solid #CECDCA;
            background: @gray-lightest;

            &:last-child {
              padding-bottom: 20px;
            }

            div.btn {
              width: 100%;
              border: 2px solid #f0f0ee;
              margin-top: 8px;

              span:first-child:not(:last-child) {
                float: left;
              }

              span:nth-child(2) {
                float: right;
              }
            }

            .datepicker-element {
              margin-top: 10px;

              .datepicker-inline { width: 100%; }
            }

            .datepicker {
              table {
                border-spacing: 2px;
                border-collapse: separate;
                width: 100%;

                th { font-weight: normal; }

                td, th {
                  padding: 0 4px;
                  width: initial;
                  height: initial;
                  font-size: 12px;
                }

                thead {
                  tr:first-child {
                    color: #ec137c;

                    th { font-size: 105%; }
                  }
                }
              }

              table tr td.active.active,
              span.month.active {
                background-color: #E9E8E7;
                color: #ec137c;
                border: none;
              }
            }
          }

          #when {
            margin-top: 10px;
            width: 100%;

            button {
              width: 33.33333%;
              display: inline-block;
              border: 2px solid #d4d3d1;
              background-color: #ffffff;

              &#this-week {
                border-left: none;
                border-right: none;
              }

              &.active { color: #ec137c; }
            }
          }

          #filtered-results {
            border-top: 0;

            a { color: #7b7979; }

            .dropdown-menu {
              position: static;
              float: none;
              background-color: transparent;
              padding-left: 20px;

              label { font-weight: normal; }
            }
          }

          .transparent-separator {
            background-color: transparent;
            height: 10px;
            padding: 0;
            border-top: none;
          }

          .amenity {
            label { font-weight: normal; }
          }

          .filter-title { margin-bottom: 10px; }
        }

        &.main-menu {
          .nav-pills {
            &.navbar-left {
              padding: 0;

              li { margin-right: 10px; }
            }

            &.navbar-right {
              .row {
                margin: 0;
              }

              li { cursor: pointer; }
            }

            li > a {
              box-shadow: none;
            }
          }

          #user-pill {
            width: 240px;

            span.caret,
            span.glyphicon-menu-hamburger { color: #7b7979; }
          }

          .nooks {
            padding: 0;
          }

          .nook {
            background-color: #fafafa;
            margin: 10px 0 0px 0;
            padding: 10px;

            img {
              width: 100%;
              margin-bottom: 10px;
            }

            .book-this-nook {
              width: 100%;
              background-color: #ffffff;
              color: #4099d0;
              border: 1px solid #4099d0;
              margin-top: 10px;

              &:hover {
                background-color: #4099d0;
                border: 0;
                color: #ffffff;
              }
            }
          }

          .nook-item {
            padding-right: 0;
            padding-left: 10px;
          }

          @media (max-width: 768px) {
            .nook-item { width: 100%; }
          }

          @media (max-width: 1000px) and (min-width: 768px)  {
            .nook-item { width: 50%; }
          }

          @media (min-width: 1000px) {
            .nook-item { width: 33.333333333%; }
          }

          @media (min-width: 1200px) {
            .nook-item { width: 25%; }
          }

          @media (min-width: 1400px) {
            .nook-item { width: 20%; }
          }

          @media (min-width: 1700px) {
            .nook-item { width: 16.666666667%; }
          }
        }
      }
    }

    .btn:focus,
    .btn:active:focus,
    .btn.active:focus,
    .btn.focus,
    .btn:active.focus,
    .btn.active.focus {
      outline: 0;
    }

    input[type=checkbox] {
      display: none;
    }

    input[type=checkbox] + label { cursor: pointer; }

    input[type=checkbox] + label span {
      display: inline-block;
      width: 18px;
      height: 18px;
      margin: -1px 4px 0 0;
      vertical-align: middle;
      background: url(<%= asset_path('checkbox-off.gif') %>) left top no-repeat;
      cursor: pointer;
    }

    input[type=checkbox]:checked + label span {
      background: url(<%= asset_path('checkbox-on.gif') %>) left top no-repeat;
    }

    .nook-icon {
      display: inline-block;
      width: 20px;
      height: 20px;
      background-position: center center;
      background-repeat: no-repeat;
      vertical-align: middle;
      margin-right: 5px;

      &.name { background-image: url(<%= asset_path('nook_name.gif') %>) }
      &.location { background-image: url(<%= asset_path('nook_location.gif') %>) }
      &.availability { background-image: url(<%= asset_path('nook_availability.gif') %>) }
      &.amenities { background-image: url(<%= asset_path('nook_amenities.gif') %>) }
      &.maxcapacity { background-image: url(<%= asset_path('nook_maxcapacity.gif') %>) }
    }
  }
}

.nav-pills > li {
  > a {
    background-color: white;
    font-weight: bold;
    color: @brand-primary;
    box-shadow: 0 2px 3px @gray-lighter;
  }

  #user-pill {
    padding: 0px;
    width: 215px;
    white-space: nowrap;

    > div:first-child * {
      font-size: 25px;
      background-color: @brand-primary;
      margin-top: 6px;
      border-radius: 50%;
    }

    > div:last-child > *:first-child {
      font-size: 20px;
      padding: 8px 0px 12px;
    }

    > div:last-child > *:last-child {
      margin-bottom: @padding-large-vertical;
      border-top-width: @caret-width-large;
      border-right-width: @caret-width-large;
      border-left-width: @caret-width-large;
    }

    > div:last-child > *:first-child {
      margin-right: 2px;
    }

    > div:nth-child(2) {
      padding-left: 0;
      overflow: hidden;

      > * {
        text-align: left;
        margin-left: 5px;
      }

      *:last-child {
        font-size: @font-size-small;
      }
    }
  }
}

label.hash {
  display: block;
}

input.hash {
  width: 30%;
  display: inline-block;
}

.container .left-menu, .container-fluid .left-menu {
  > *:first-child:last-child {
    min-height: 800px;
  }

  &:not(.booking) {
    border-style: solid;
    border-radius: 8px;
    border-width: @border-radius-small;
    border-color: @gray-lightish;
  }

  .dropdown {
    position: initial;

    a {
      text-decoration: none;
    }

    ul.dropdown-menu {
      position: initial;
      border: none;
      -webkit-box-shadow: none;
      box-shadow: none;
      background-clip: initial;
    }
  }

  .slider {
    margin-top: 10px;
    margin-bottom: 15px;
    width: 100%;

    .slider-selection {
      background: @brand-primary;
    }

    .slider-handle {
      border-color: @gray-light;
      border-width: 1px;
      background: white;
    }

    .tooltip-inner, .tooltip-arrow {
      display: none;
    }
  }

  .slider-min, .slider-max {
    display: inline-block;
    border: 1px solid #7b7979;
    padding: 2px;
  }

  .slider-min { float: left; }
  .slider-max { float: right; }

  #add-location-button {
    margin: 8px 0 0 0;
    padding: 0;
    border-color: #d4d3d1;

    a {
      color: @brand-primary;
      width: 100%;
      background-color: #e9e9e9;
      border: 0;
      text-align: left;
      padding: 5px 10px;
      font-size: 12px;
      line-height: 1.5;
      border-radius: 3px;
    }

    #add-location-sign { float: right; }
  }

  .btn:hover { color: #7b7979; }
}

#modal {
  .modal-dialog.row {
    width: 100%;
  }

  .modal-content {
    background: transparent;
    box-shadow: none;
    border: none;

    .modal-body {
      padding: 0;

      h1,h2,h3,h4,h5,h6 {
        margin-top: 0;
        margin-bottom: 0;
      }

      &.right-row {
        h1,h2,h3,h4,h5,h6 {
          border-bottom: @border-radius-small solid @gray-lightish;
        }
      }

      > * {
        background: white;
        border-radius: @border-radius-large;
        border-color: white;
        border-style: none;
        min-height: 200px;

        &:not(:last-child) {
          margin-bottom: @padding-large-horizontal;
        }

        > * {
          padding: 0 @padding-small-horizontal @padding-large-vertical @padding-small-horizontal;

          &:first-child {
            padding-top: @padding-large-vertical;
          }
        }
      }
    }

    &:first-child > .modal-body:first-child > * {
      &:first-child {
        min-height: 600px;
      }

      > *:first-child {
        h1,h2,h3,h4,h5,h6 {
          &:first-child {
            float: left;
          }
        }

        h1,h2,h3,h4,h5,h6 {
          &:last-child:not(:first-child) {
            float: right;
          }
        }
      }
    }

    &:last-child > .modal-body:first-child > * {
      margin-left: @padding-large-horizontal;
    }
  }

  .select-locations-modal {
    button {
      margin-right: 10px;
    }
  }
}

form.edit_nook {
  .inline {
    > * {
      display: inline-block;
    }

    input {
      width: 60px;
      padding-left: @padding-small-horizontal;
      padding-right: @padding-small-horizontal;
    }
  }
}

span.checked, span.unchecked {
  padding: 2px;
  font-size: @font-size-small;
  color: white;

  + span {
    margin-left: @padding-small-horizontal;
  }
}

span.checked {
  background-color: @brand-primary;
}

span.unchecked {
  background-color: @gray-lightish;

  + span {
    color: @gray-lightish;
  }

  &:before {
    visibility: hidden;
  }
}

#locations-select {
  max-height: 300px;
  overflow-y: auto;

  li {
    cursor: pointer;

    &.active {
      background-color: #e9e9e9;
      border: 0;
      color: #7b7979;
    }
  }
}