@import "my_vars.less";

#locations-select {
  max-height: 300px;
  overflow-y: auto;

  li {
    cursor: pointer;

    &.active {
      background-color: #e9e9e9;
      border: 0;
      color: #7b7979;
    }
  }
}

#nook-carousel {
  .carousel-control { color: #4099D0; }

  .item { max-height: 400px; }
}

.carousel-thumbnails {
  margin-top: 10px;

  > div:first-child { padding-left: 0; }
  > div {
    margin-bottom: 10px;
    cursor: pointer;
  }

  .thumbnail { margin-bottom: 0; }

  a.thumbnail:hover,
  a.thumbnail:focus,
  a.thumbnail.active { border-color: #4099D0; }
}