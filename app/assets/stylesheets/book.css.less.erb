@import "my_vars.less";

body {
  #nook-carousel {
    .carousel-control { color: #4099D0; }

    .item { max-height: 400px; }
  }

  .carousel-thumbnails {
    margin-top: 10px;

    > div {
      margin-bottom: 10px;
      cursor: pointer;
      float: none;
      display: inline-block;
      vertical-align: top;
      padding-left: 0;
    }

    .thumbnail { margin-bottom: 0; }

    a.thumbnail:hover,
    a.thumbnail:focus,
    a.thumbnail.active { border-color: #4099D0; }
  }

  &.booking {
    .reservation-form {
      .reservation-form-toggle {
        color: #ec137c;
        cursor: pointer;
      }

      /* .reservation-form-body { display: none; }*/

      form > table > tbody > tr > td:first-child { width: 200px; }

      td {
        padding: 5px 10px 5px 0;
        vertical-align: top;
      }

      .reservation-form-part1 { margin-bottom: 15px; }

      .fill-in { border: 1px solid red; }

      .reservation-when-day {
        button {
          border: 2px solid #d4d3d1;
          background-color: #ffffff;
          margin-right: 5px;
          display: block;
          float: left;

          &:hover { color: #7b7979; }
          &:focus {
            border: 2px solid #d4d3d1;
            background-color: #ffffff;
            color: #7b7979;
          }
          &.active {
            color: #ffffff;
            background-color: #ec137c;
            border: 2px solid #ffffff;
          }
        }
      }
    }

    .upcoming-reservation {
      word-break: break-all;

      .col-sm-6 { padding: 0; }
      .upcoming-reservation-range { color: #4099d0; }
    }

    #locations-select {
      max-height: 300px;
      overflow-y: auto;

      li {
        cursor: pointer;

        &.active {
          background-color: #e9e9e9;
          border: 0;
          color: #7b7979;
        }
      }
    }
  }
}
.reservation-part2 {
  textarea {
    margin-bottom: 15px;
  }
}
